<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Covid19Riskmeter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Covid19Riskmeter.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="circleImageViewStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">85%</item>
    </style>

    <style name="Theme.Covid19Riskmeter.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Covid19Riskmeter.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>